# RegEngine Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================
# AWS / S3 Configuration
# ============================================
# For local development with LocalStack
RAW_DATA_BUCKET=reg-engine-raw-data-dev
PROCESSED_DATA_BUCKET=reg-engine-processed-data-dev
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://localstack:4566

# For production AWS
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_ENDPOINT_URL=  # Leave empty for real AWS

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=redpanda:9092
KAFKA_TOPIC_NORMALIZED=ingest.normalized
KAFKA_TOPIC_NLP=nlp.extracted

# For production Kafka/MSK
# KAFKA_BOOTSTRAP_SERVERS=your-kafka-broker:9092
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=AWS_MSK_IAM

# ============================================
# Neo4j Configuration
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me-in-production

# For production Neo4j Aura
# NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your-secure-password

# ============================================
# Admin API Configuration
# ============================================
# CRITICAL: Change this in production!
ADMIN_MASTER_KEY=dev-admin-key-change-in-production

# Generate a secure key for production:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# For production debugging
# LOG_LEVEL=DEBUG

# ============================================
# Service Ports (for docker-compose)
# ============================================
ADMIN_API_PORT=8400
INGESTION_SERVICE_PORT=8000
NLP_SERVICE_PORT=8100
GRAPH_SERVICE_PORT=8200
OPPORTUNITY_API_PORT=8300

# ============================================
# Monitoring (for future Prometheus/Grafana)
# ============================================
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
