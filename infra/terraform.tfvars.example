# RegEngine Terraform Variables
# Copy this file to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "regengine"
environment  = "prod"
aws_region   = "us-east-1"

# Networking
vpc_cidr            = "10.0.0.0/16"
availability_zones  = ["us-east-1a", "us-east-1b", "us-east-1c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# ECS Configuration
ecs_task_cpu    = 512
ecs_task_memory = 1024

# Service Scaling
ingestion_service_count  = 2
nlp_service_count        = 2
graph_service_count      = 2
opportunity_api_count    = 2
admin_api_count          = 1

# Neo4j Configuration (Aura)
# neo4j_aura_instance_size = "1GB"
# Or self-hosted on EC2:
neo4j_instance_type = "t3.medium"

# Kafka Configuration
kafka_instance_type = "kafka.m5.large"
kafka_broker_count  = 3

# S3 Buckets
enable_s3_versioning = true
s3_lifecycle_days    = 90

# Monitoring
enable_container_insights = true
log_retention_days        = 30

# Tags
tags = {
  Project     = "RegEngine"
  Environment = "Production"
  ManagedBy   = "Terraform"
  CostCenter  = "Engineering"
}
